{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "esModuleInterop": true,
    "noResolve": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@base/*": ["base/*"],
      "@elements/*": ["elements/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["./example", "./src", "./types.d.ts"],
  "exclude": ["node_modules"]
}
