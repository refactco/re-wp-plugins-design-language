    // "paths": {
    //   "@base/*": ["base/*"],
    //   "@elements/*": ["elements/*"],
    //   "@components/*": ["components/*"],
    //   "@styles/*": ["styles/*"],
    //   "@utils/*": ["utils/*"]
    // }
  },
  "include": ["src", "./types.d.ts"],
  "exclude": ["node_modules"]
}
